{
  "name": "core-ms",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:postgre": "cross-env TEST_CRUD_DB=postgre nest start",
    "start:test-ms": "concurrently -k -s='last' npm:start:ms-* npm:test:ms",
    "start:test-ms:proxy": "concurrently -k -s='last' npm:start:ms:proxy-* npm:test:ms:proxy",
    "start:ms-user": "cross-env CRUD_CURRENT_MS=user PORT=3005 nest start",
    "start:ms-melon": "cross-env CRUD_CURRENT_MS=melon PORT=3006 nest start",
    "start:ms-email": "cross-env CRUD_CURRENT_MS=email PORT=3007 nest start",
    "start:ms:proxy-user": "cross-env TEST_CRUD_PROXY=true CRUD_CURRENT_MS=user PORT=3005 nest start",
    "start:ms:proxy-melon": "cross-env TEST_CRUD_PROXY=true CRUD_CURRENT_MS=melon PORT=3006 nest start",
    "start:ms:proxy-email": "cross-env TEST_CRUD_PROXY=true CRUD_CURRENT_MS=email PORT=3007 nest start",
    "test:ms": "wait-on http://localhost:3005/crud/rdy && wait-on http://localhost:3006/crud/rdy && wait-on http://localhost:3007/crud/rdy && cross-env CRUD_CURRENT_MS=entry jest --runInBand --forceExit",
    "test:ms:proxy": "wait-on http://localhost:3005/crud/rdy && wait-on http://localhost:3006/crud/rdy && wait-on http://localhost:3007/crud/rdy && cross-env CRUD_CURRENT_MS=entry TEST_CRUD_PROXY=true jest --testPathIgnorePatterns=traffic- --runInBand --forceExit",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --forceExit --maxWorkers=50%",
    "test:postgre": "cross-env TEST_CRUD_DB=postgre jest --forceExit --maxWorkers=50%",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "generate:typedoc": "typedoc --plugin typedoc-plugin-markdown --out docs/api && del-cli docs/api/README.md"
  },
  "dependencies": {
    "@casl/ability": "^6.5.0",
    "@fastify/reply-from": "^9.7.0",
    "@mikro-orm/core": "^6.1.12",
    "@mikro-orm/mongodb": "^6.1.12",
    "@mikro-orm/nestjs": "^5.2.3",
    "@mikro-orm/postgresql": "^6.1.12",
    "@nestjs/cache-manager": "^2.2.1",
    "@nestjs/common": "^10.3.6",
    "@nestjs/core": "^10.3.6",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-fastify": "^10.3.6",
    "@nestjs/schedule": "^4.0.1",
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "cache-manager": "^5.4.0",
    "class-validator": "^0.14.1",
    "concurrently": "^8.2.2",
    "js-cookie": "^3.0.5",
    "lru-cache": "^10.2.0",
    "mnemonist": "^0.39.8",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "wait-on": "^7.2.0",
    "wildcard": "^2.0.1"
  },
  "devDependencies": {
    "@eicrud/cli": "^0.1.0",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.6",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.19",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "commander": "^12.0.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "29.7.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typedoc": "^0.25.13",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
